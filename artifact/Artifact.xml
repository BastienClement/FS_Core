<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Script file="ArtifactInspect.lua"/>

	<Script file="ArtifactPerks.lua"/>
	<Script file="ArtifactPowerButton.lua"/>
	<Script file="ArtifactUI.lua"/>

	<Button name="FSArtifactPowerButtonTemplate" parentArray="PowerButtons" mixin="FSArtifactPowerButtonMixin" virtual="true">
		<Size x="37" y="37"/>
		<Layers>
			<Layer level="OVERLAY" textureSubLevel="2">
				<Texture parentKey="Icon" mask="Interface\CharacterFrame\TempPortraitAlphaMask">
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="1">
				<Texture parentKey="IconDesaturated" mask="Interface\CharacterFrame\TempPortraitAlphaMask" desaturated="true">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Icon"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Icon"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="4">
				<Texture parentKey="IconBorder">
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="3">
				<Texture parentKey="IconBorderDesaturated" desaturated="true">
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="6">
				<Texture parentKey="RankBorder" atlas="Artifacts-PointsBoxGreen" useAtlasSize="true">
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Icon" relativePoint="BOTTOM"/>
					</Anchors>
				</Texture>
				<Texture parentKey="RankBorderFinal" alpha="0" atlas="Artifacts-PointsBox" useAtlasSize="true">
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Icon" relativePoint="BOTTOM"/>
					</Anchors>
				</Texture>
				<FontString parentKey="Rank" inherits="GameFontNormal">
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.RankBorder"/>
					</Anchors>
				</FontString>
			</Layer>

			<Layer level="OVERLAY" textureSubLevel="-2">
				<Texture parentKey="RelicTraitBG">
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Icon"/>
					</Anchors>
				</Texture>
				<Texture parentKey="LightRune" alpha="0" hidden="true">
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="-1">
				<Texture parentKey="RelicTraitGlow" alphaMode="ADD">
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Icon"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="5">
				<Texture parentKey="RelicTraitGlowRing" alphaMode="ADD">
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Icon"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave function="GameTooltip_Hide"/>
		</Scripts>
	</Button>

	<Frame name="FSArtifactPerksTabTemplate" mixin="FSArtifactPerksMixin" virtual="true" useParentLevel="true">
		<Layers>
			<Layer level="BORDER" textureSubLevel="-5">
				<Texture parentKey="BackgroundBack"/>
			</Layer>
			<Layer level="BORDER" textureSubLevel="-4">
				<Texture parentKey="BackgroundBackShadow" atlas="Artifacts-BG-Shadow" useAtlasSize="true"/>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="-6">
				<Texture parentKey="HeaderBackground" atlas="Artifacts-HeaderBG"/>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="TitleContainer" mixin="FSArtifactTitleTemplateMixin" useParentLevel="true">
				<Anchors>
					<Anchor point="TOPLEFT"/>
					<Anchor point="TOPRIGHT"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY" textureSubLevel="-1">
						<Texture parentKey="Background">
							<Anchors>
								<Anchor point="TOP"/>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<FontString parentKey="ArtifactName" inherits="Fancy24Font">
							<Anchors>
								<Anchor point="TOP" y="-8"/>
							</Anchors>
							<Shadow>
								<Offset x="1" y="-1"/>
								<Color r="0" g="0" b="0"/>
							</Shadow>
						</FontString>
						<FontString parentKey="PointsRemainingLabel" inherits="SystemFont_Shadow_Large">
							<Anchors>
								<Anchor point="BOTTOM" y="-2"/>
							</Anchors>
							<Color r="1" g="1" b="1"/>
						</FontString>
						<FontString parentKey="ArtifactPower" inherits="SystemFont_Shadow_Large" text="ARTIFACT_POWER">
							<Anchors>
								<Anchor point="BOTTOM" relativeKey="$parent.PointsRemainingLabel" relativePoint="TOP"/>
							</Anchors>
							<Color r=".901" g=".8" b=".501"/>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<Button parentKey="RelicSlot1" parentArray="RelicSlots" inherits="ArtifactsRelicSlotTemplate"/>
					<Button parentKey="RelicSlot2" parentArray="RelicSlots" inherits="ArtifactsRelicSlotTemplate"/>
					<Button parentKey="RelicSlot3" parentArray="RelicSlots" inherits="ArtifactsRelicSlotTemplate"/>
				</Frames>
			</Frame>
			<PlayerModel parentKey="AltModel" inherits="ArtifactsModelTemplate"/>
			<PlayerModel parentKey="Model" inherits="ArtifactsModelTemplate">
				<Layers>
					<Layer level="OVERLAY" textureSubLevel="-7">
						<Texture parentKey="BackgroundFront" alpha=".5">
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent.$parent.BackgroundBack"/>
								<Anchor point="BOTTOMRIGHT" relativeKey="$parent.$parent.BackgroundBack"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
			</PlayerModel>
		</Frames>
		<Scripts>
			<OnShow method="OnShow"/>
		</Scripts>
	</Frame>

	<Frame name="FSArtifactFrame" toplevel="true" parent="UIParent" enableMouse="true" hidden="true" mixin="FSArtifactUIMixin">
		<Size x="720" y="615"/>
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND" textureSubLevel="-6">
				<Texture parentKey="Background" file="Interface\FrameGeneral\UI-Background-Marble" horizTile="true" vertTile="true"/>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="Uninspectable" setAllPoints="true" frameLevel="500" enableMouse="true" hidden="false">
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="Background">
							<Color r="0" g="0" b="0" a=".75"/>
						</Texture>
					</Layer>
					<Layer level="ARTWORK">
						<FontString parentKey="Text" justifyH="CENTER" justifyV="MIDDLE" font="GameFontNormalHuge" text="FS_ARTIFACT_UNINSPECTABLE">
							<Anchors>
								<Anchor point="LEFT" x="150"/>
								<Anchor point="RIGHT" x="-150"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
			<Frame parentKey="BorderFrame" setAllPoints="true" frameLevel="1000">
				<Layers>
					<Layer level="OVERLAY">
						<Texture parentKey="ForgeBottomLeftCorner" atlas="ForgeBorder-CornerBottomLeft"
						         useAtlasSize="true">
							<Anchors>
								<Anchor point="BOTTOMLEFT" x="-13" y="-13"/>
							</Anchors>
						</Texture>
						<Texture parentKey="ForgeBottomRightCorner" atlas="ForgeBorder-CornerBottomRight"
						         useAtlasSize="true">
							<Anchors>
								<Anchor point="BOTTOMRIGHT" x="13" y="-13"/>
							</Anchors>
						</Texture>
						<Texture parentKey="ForgeTopRightCorner" atlas="ForgeBorder-CornerTopRight" useAtlasSize="true">
							<Anchors>
								<Anchor point="TOPRIGHT" x="13" y="13"/>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="BORDER">
						<Texture parentKey="ForgeTopBorder" atlas="_ForgeBorder-Top" horizTile="true">
							<Size y="16"/>
							<Anchors>
								<Anchor point="TOPLEFT" x="0" y="13"/>
								<Anchor point="TOPRIGHT" relativeKey="$parent.ForgeTopRightCorner" relativePoint="TOPLEFT"/>
							</Anchors>
						</Texture>
						<Texture parentKey="ForgeBottomBorder" atlas="_ForgeBorder-Top" horizTile="true">
							<Size y="16"/>
							<Anchors>
								<Anchor point="BOTTOMLEFT" relativeKey="$parent.ForgeBottomLeftCorner" relativePoint="BOTTOMRIGHT"/>
								<Anchor point="BOTTOMRIGHT" relativeKey="$parent.ForgeBottomRightCorner" relativePoint="BOTTOMLEFT"/>
							</Anchors>
							<TexCoords top="1.0" bottom="0.0"/>
						</Texture>
						<Texture parentKey="ForgeRightBorder" atlas="!ForgeBorder-Right" vertTile="true">
							<Size x="16"/>
							<Anchors>
								<Anchor point="TOPRIGHT" relativeKey="$parent.ForgeTopRightCorner" relativePoint="BOTTOMRIGHT"/>
								<Anchor point="BOTTOMRIGHT" relativeKey="$parent.ForgeBottomRightCorner" relativePoint="TOPRIGHT"/>
							</Anchors>
						</Texture>
						<Texture parentKey="ForgeLeftBorder" atlas="!ForgeBorder-Right" vertTile="true">
							<Size x="16"/>
							<Anchors>
								<Anchor point="TOPLEFT" x="-13" y="0"/>
								<Anchor point="BOTTOMLEFT" relativeKey="$parent.ForgeBottomLeftCorner" relativePoint="TOPLEFT"/>
							</Anchors>
							<TexCoords left="1.0" right="0.0"/>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
			<Frame parentKey="ForgeBadgeFrame" setAllPoints="true" frameStrata="HIGH">
				<Layers>
					<Layer level="OVERLAY">
						<Texture parentKey="ForgeClassBadgeIcon">
							<Anchors>
								<Anchor point="CENTER" relativePoint="TOPLEFT" x="20" y="-20"/>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY" textureSubLevel="2">
						<Texture parentKey="ForgeLevelBackground" file="Interface\Minimap\MiniMap-TrackingBorder">
							<Size x="64" y="64"/>
							<Anchors>
								<Anchor point="CENTER" relativePoint="TOPLEFT" x="62" y="-62"/>
							</Anchors>
						</Texture>
						<FontString parentKey="ForgeLevelLabel" inherits="SystemFont_Shadow_Med2">
							<Anchors>
								<Anchor point="CENTER" relativeKey="$parent.ForgeLevelBackground" relativePoint="CENTER"
								        x="-13" y="14"/>
							</Anchors>
							<Color r="1.0" g="0.82" b="0"/>
						</FontString>
					</Layer>
					<Layer level="OVERLAY" textureSubLevel="1">
						<Texture parentKey="ForgeLevelBackgroundBlack" alpha="0.7">
							<Size x="22" y="22"/>
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent.ForgeLevelBackground" relativePoint="TOPLEFT" x="8" y="-7"/>
							</Anchors>
							<Color r="0" g="0" b="0"/>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
			<Frame parentKey="ForgeLevelFrame">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.ForgeBadgeFrame.ForgeLevelBackground"/>
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent.ForgeBadgeFrame.ForgeLevelBackground"/>
				</Anchors>
				<Scripts>
					<OnEnter>
						self:GetParent():OnKnowledgeEnter(self)
					</OnEnter>
					<OnLeave function="GameTooltip_Hide"/>
				</Scripts>
			</Frame>
			<Frame parentKey="PerksTab" setAllPoints="true" hidden="true" inherits="FSArtifactPerksTabTemplate"/>
			<Button parentKey="CloseButton" inherits="UIPanelCloseButton" frameLevel="1500">
				<Anchors>
					<Anchor point="TOPRIGHT" relativeKey="$parent.BorderFrame.ForgeTopRightCorner" x="-5" y="-6"/>
				</Anchors>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
		</Scripts>
	</Frame>
</Ui>
